{
  "name": "engineersdaybook",
  "image": "mcr.microsoft.com/devcontainers/base:debian",
  "workspaceFolder": "/home/vscode/workspace",
  "workspaceMount": "source=${localWorkspaceFolder},target=/home/vscode/workspace,type=bind",
  "features": {
    "ghcr.io/devcontainers-extra/features/starship:1": {},
    "ghcr.io/devcontainers-extra/features/apt-get-packages:1": {
      "packages": [
        "netcat-openbsd"
      ]
    }
  },
  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh/,target=/home/vscode/.ssh/,type=bind,consistency=cached",
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.gitconfig,target=/home/vscode/.gitconfig,type=bind,consistency=cached",
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.bash_history,target=/home/vscode/.bash_history,type=bind,consistency=cached"
  ],
  "customizations": {
    "vsvscode": {
      "extensions": [
        "streetsidesoftware.code-spell-checker",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "mhutchie.git-graph",
        "donjayamanne.githistory",
        "yzhang.markdown-all-in-one",
        "Gruntfuggly.todo-tree",
        "mutantdino.resourcemonitor"
      ],
      "settings": {
        "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font Mono",
        "terminal.integrated.gpuAcceleration": "on",
        "editor.fontLigatures": true,
        "editor.fontFamily": "JetBrainsMono Nerd Font Mono",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "/bin/bash",
            "args": [
              "-l"
            ],
            "icon": "terminal-bash"
          }
        },
        // https://github.com/microsoft/vscode-copilot-release/issues/6498#issuecomment-2739557361
        "github.copilot.advanced": {
          "debug.useNodeFetcher": true
        },
        "yaml.format.enable": true,
        "yaml.format.singleQuote": false,
        "yaml.format.bracketSpacing": true,
        "telemetry.telemetryLevel": "off",
        "files.autoSave": "afterDelay",
        "files.associations": {
          "*.yaml": "yaml"
        }
      }
    },
    "remoteUser": "1000",
    "containerUser": "1000",
    "remoteEnv": {
      "LANG": "C.UTF-8",
      "LC_ALL": "C.UTF-8"
    },
    "containerEnv": {
      "LANG": "C.UTF-8",
      "LC_ALL": "C.UTF-8"
    }
  }
}